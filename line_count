#pragma config(Sensor, S1,     LightSensor,    sensorLightActive)
#pragma config(Sensor, S2,     TouchSensor,    sensorTouch)
#pragma config(Sensor, S3,     SoundSensor,    sensorSoundDB)
#pragma config(Sensor, S4,     SonarSensor,    sensorSONAR)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
task main()
{
	//threshhol values light = greater then 45 dark = less then 45
	int light = 50;
	int dark = 40;
	int sum;
	int thresh_hold_Value;
	
	int count = 0;
	int lastseen = 1;
	
	
	ClearTimer(T1);
	
	
	sum = light + dark;
	thresh_hold_Value = sum / 2;
	
	nMotorPIDSpeedCtrl[motorB] = mtrSpeedReg;
	nMotorPIDSpeedCtrl[motorC] = mtrSpeedReg;
	
	
	while(count < 5)
	{
		if(SensorValue(LightSensor) > thresh_hold_Value)
		{
			motor[motorB] = 50;
			motor[motorC] = 50;
			lastseen = 1;
		}
		else
		{
			
			
			if(lastseen == 1)
			{
				count = count + 1;
				lastseen = 0;
			}
			nxtDisplayCenteredBigTextLine(0,"%d", count);
		}
	}
	motor[motorB] = 0;
	motor[motorC] = 0;

}
