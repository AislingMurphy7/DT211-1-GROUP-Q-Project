#pragma config(Sensor, S1,     LightSensor,    sensorLightActive)
#pragma config(Sensor, S2,     TouchSensor,    sensorTouch)
#pragma config(Sensor, S3,     SoundSensor,    sensorSoundDB)
#pragma config(Sensor, S4,     SonarSensor,    sensorSONAR)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{

	//variables to store calculation data.
	int c_rotation;
	int c_distance;
	int circle;

	//variables to store initial values.
	int d2 = 66;
	int d1 = 110;
	float pie = 3.141592;

	//Calculation.
	c_rotation = (pie * d2);//345.4
	c_distance =pie * d1;//414.48
	c_distance = (c_rotation / c_distance);
	circle = (c_distance * c_rotation);


	nMotorEncoder[motorA] = 0;
	nMotorEncoder[motorB] = 0;

	while(nMotorEncoder[motorA] < 1800 && nMotorEncoder[motorB] <1800)
	{
		motor[motorA] = 50;
		motor[motorB] = 50;

	}

	/*
	while(nMotorRunState[motorA] != runStateIdle && nMotorRunState[motorB] != runStateIdle)
	{

	}
	*/
	motor[motorA] = 0;
	motor[motorB] = 0;







	nMotorEncoder[motorA] = 0;
	nMotorEncoder[motorB] = 0;
	while(nMotorEncoderTarget[motorA] < circle && nMotorEncoderTarget[motorB] < circle)
	{



	motor[motorA] = 20;
	motor[motorB] = -20;
}
	/*
	while(nMotorRunState[motorA] != runStateIdle)
	{

	}
	*/






}
