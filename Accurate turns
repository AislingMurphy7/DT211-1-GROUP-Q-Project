#pragma config(Sensor, S1,     LightSensor,    sensorLightActive)
#pragma config(Sensor, S2,     TouchSensor,    sensorTouch)
#pragma config(Sensor, S3,     SoundSensor,    sensorSoundDB)
#pragma config(Sensor, S4,     SonarSensor,    sensorSONAR)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{

	//variables to store calculation data.
	float c_rotation;
	float c_distance;
	float temp;
	float circle;

	//variables to store initial values.
	float d1 = 52.0;// radius of wheel
	float d2 = 102.0;// lenght between both wheels
	float pie = 3.141592;

	//Calculation.
	c_rotation = (pie * d1);
	c_distance =(pie * d2);
	temp = (c_distance / c_rotation);
	circle = (temp * c_distance);

	nxtDisplayCenteredTextLine(0,"%d", circle);

	nSyncedMotors = synchBC;
	nSyncedTurnRatio = -100;

	nMotorPIDSpeedCtrl[motorB] = mtrSpeedReg;
	nMotorPIDSpeedCtrl[motorC] = mtrSpeedReg;

	nMotorEncoder[motorB] = 0;
	nMotorEncoder[motorC] = 0;

	nMotorEncoderTarget[motorB] = circle;
	nMotorEncoderTarget[motorC] = -circle;

	motor[motorB] = 20;
	motor[motorC] = -20;

	while(nMotorRunState[motorB] != runStateIdle)
	{

	}


	motor[motorB] = 0;
	motor[motorC] = 0;

}
